{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "mozPipelineMetadata": {
    "bq_dataset_family": "rally_study_01",
    "bq_metadata_format": "pioneer",
    "bq_table": "measurements_v1",
    "expiration_policy": {
      "delete_after_days": 180
    }
  },
  "definitions": {
    "RS01.userEvent": {
      "type": "object",
      "description": "the shared properties for RS01.attentionEvent and RS01.audioEvent",
      "properties": {
        "pageId": { "type": "integer" },
        "tabId": { "type": "integer" },
        "windowId": { "type": "integer" },
        "privateWindow": { "type": "boolean" },
        "url": { "type": "string" },
        "referrer": { "type": "string" },
        "pageVisitStartTime": { "type": "integer" },
        "pageVisitEndTime": { "type": "integer" },
        "duration": { "type": "integer" },
        "reason": { "type": "string" },
        "title": { "type": "string" }
      },
      "required": [
        "pageId",
        "tabId",
        "windowId",
        "privateWindow",
        "url",
        "referrer",
        "pageVisitStartTime",
        "pageVisitEndTime",
        "duration",
        "reason",
        "title"
      ]
    },
    "RS01.attentionEvent": {
      "allOf": [
        { "$ref": "#/definitions/RS01.userEvent" },
        {
          "title": "RS01.attentionEvent",
          "description": "An attention event generated by RS01",
          "properties": {
            "maxPixelScrollDepth": { "type": "integer" },
            "maxRelativeScrollDepth": { "type": "number" }
          }
        }
      ]
    },
    "RS01.audioEvent": {
      "allOf": [
        { "$ref": "#/definitions/RS01.userEvent" },
        {
          "title": "RS01.audioEvent",
          "description": "An audio event generated by RS01.",
          "properties": {}
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "RS01.event": {
      "anyOf": [
        { "$ref": "#/definitions/RS01.attentionEvent" },
        { "$ref": "#/definitions/RS01.audioEvent" }
      ]
    }
  }
}
